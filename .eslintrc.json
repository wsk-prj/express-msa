{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": ["dist", "public", "node_modules", "**/generated/**"],
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "import"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  },
  "rules": {
    // 함수 반환 타입 명시에 대한 규칙 - 비활성화
    "@typescript-eslint/explicit-function-return-type": "off",

    // 모듈 경계 타입 명시에 대한 규칙 - 비활성화
    "@typescript-eslint/explicit-module-boundary-types": "off",

    // any 타입 사용에 대한 규칙 - 비활성화
    "@typescript-eslint/no-explicit-any": "off",

    // 사용하지 않는 변수에 대한 규칙 - 경고 (언더바로 시작하는 건 제외)
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],

    // 처리되지 않은 Promise에 대한 규칙 - 경고
    "@typescript-eslint/no-floating-promises": "warn",

    // 타입 안전하지 않은 인수에 대한 규칙 - 경고
    "@typescript-eslint/no-unsafe-argument": "warn",
    
	  // import 관련 규칙
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "newlines-between": "always"
      }
    ],
	
    // console.log 사용에 대한 규칙 - 경고 (warn, error는 허용)
    "no-console": ["warn", { "allow": ["warn", "error"] }],

    // const 사용 권장에 대한 규칙 - 오류
    "prefer-const": "error",

    // var 사용 금지에 대한 규칙 - 오류
    "no-var": "error",

    // 엄격한 비교 연산자 사용에 대한 규칙 - 오류
    "eqeqeq": ["error", "always"],

    // 줄 끝 공백 제거에 대한 규칙 - 오류
    "no-trailing-spaces": "error",

    // prettier 코드 포맷팅에 대한 규칙 - 오류
    "prettier/prettier": "error"
  }
}
